<div class='text-center'>
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p class='text-info'>Created by
    {{user.name}}
    on
    {{format_date date_created}}</p>
  <h3>Comments:</h3>
  {{#each comments as |comment|}}
    <p class='border-bottom'>{{comment.message}}
      <span class='text-info'>
        Submitted by
        {{comment.user.name}}
        on
        {{format_date comment.date_created}}</span></p>
  {{/each}}

  <form class='form new-comment-form'>
    <div class='form-group'>
      <label for='comment-message'>Add a Comment:</label>
      <input
        class='form-input'
        type='text'
        id='comment-message'
        name='comment-message'
      />
    </div>
    <div class='form-group'>
      <button type='submit' class='btn btn-primary'>Post Your Comment</button>
    </div>
  </form>
</div>

<script src='../js/post.js'></script>