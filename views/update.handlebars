<div class='text-center'>
  <div>
    <h3 class='text-link'>Update Your Post:</h3>

    <form class='form update-post-form' data-id='{{id}}'>
      <div class='form-group'>
        <label for='post-title' class='text-link'>Post Title:</label>
        <input
          value='{{title}}'
          class='form-input'
          type='text'
          id='post-title'
          name='post-title'
        />
      </div>
      <div class='form-group'>
        <label for='post-desc' class='text-link'>Description:</label>
        <textarea
          class='form-input'
          id='post-desc'
          name='post-desc'
        >{{description}}</textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Update</button>
      </div>
    </form>
  </div>
</div>

<script src='../js/update.js'></script>