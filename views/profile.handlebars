<div class='row'>
  <div class='col-auto'>
    <h2 class='text-link'>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3 class='text-link'>Create a new blog post:</h3>
    {{! form for submitting new post }}
    <form class='form new-post-form'>
      <div class='form-group'>
        <label for='post-title' class='text-link'>Post Title:</label>
        <input
          class='form-input'
          type='text'
          id='post-title'
          name='post-title'
        />
      </div>
      <div class='form-group'>
        <label for='post-desc' class='text-link'>Description:</label>
        <textarea class='form-input' id='post-desc' name='post-desc'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Post It!</button>
      </div>
    </form>
  </div>
  {{! if the user has made existing posts, loop through them to display each with buttons to handle edit or delete }}
  {{#if posts.length}}
    <div class='col-md-6 post-list'>
      <h3 class='text-link'>Your Posts:</h3>
      {{! loop through each exsiting user post and display }}
      {{#each posts as |post|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a
                href='/posts/{{post.id}}'
                class='text-info'
              >{{post.title}}</a></h4>
          </div>
          <div class='col-md-2'>
            {{! edit button for updating an existing post }}
            <button
              id='editButton'
              class='btn btn-sm btn-info'
              data-id='{{post.id}}'
            >EDIT</button>
          </div>
          <div class='col-md-2'>
            {{! delete button for removing a post permanently }}
            <button
              id='delButton'
              class='btn btn-sm btn-danger'
              data-id='{{post.id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/profile.js'></script>