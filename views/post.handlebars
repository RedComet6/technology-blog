<div class='text-center'>
  <h2 class='text-link'>{{title}}</h2>
  <p>{{description}}</p>
  <p class='text-info'>Created by
    {{user.name}}
    on
    {{format_date date_created}}</p>
  <h3 class='pt-5 text-link'>Comments:</h3>
  {{! loop through all comments to display each }}
  {{#each comments as |comment|}}
    <p class='border-bottom'>{{comment.message}}
      <span class='text-info'>
        Submitted by
        {{comment.user.name}}
        on
        {{format_date comment.date_created}}</span>
    </p>
  {{/each}}
  {{! conditionally render form for adding new comment if the user is logged in }}
  {{#if logged_in}}
    <form class='form new-comment-form' data-id='{{id}}'>
      <div class='form-group'>
        <label for='comment-message'>Add a Comment:</label>
        <input
          class='form-input'
          type='text'
          id='comment-message'
          name='comment-message'
        />
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Post Your Comment</button>
      </div>
    </form>
  {{else}}
    <h3 class='new-comment-form text-info'>Login to submit comments</h3>
  {{/if}}
</div>

<script src='../js/post.js'></script>